@page "/card"

@using RendrUI.Components.Button
@using RendrUI.Components.Card

<h3 class="text-2xl font-bold mb-4">Card Component</h3>


<div class="flex flex-wrap items-center gap-4 md:flex-col">
    <Card>
        <CardHeader>
            <CardTitle>
                Login to your account
            </CardTitle>
            <CardDescription>
                Enter your email below to login to your account.
            </CardDescription>
            <CardAction>
                <Button Variant="ButtonVariant.Link">Sign Up</Button>
            </CardAction>
        </CardHeader>
        <CardContent>
            This is the content part
        </CardContent>
        <CardFooter>
            <Button type="submit" class="w-full">
                Login
            </Button>
            <Button variant="ButtonVariant.Outline" class="w-full">
                Login with Google
            </Button>
        </CardFooter>
    </Card>
</div>